<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.dscvit.cadence.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/login_to_playlist"
            app:destination="@id/tracksListFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/login_to_consent"
            app:destination="@id/consentFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/consentFragment"
        android:name="com.dscvit.cadence.ui.login.ConsentFragment"
        android:label="fragment_consent"
        tools:layout="@layout/fragment_consent">
        <action
            android:id="@+id/consent_to_playlist"
            app:destination="@id/tracksListFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/tracksListFragment"
        android:name="com.dscvit.cadence.ui.tracks.PlaylistFragment"
        android:label="tracks_list_fragment"
        tools:layout="@layout/fragment_playlist">
        <action
            android:id="@+id/playlist_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>